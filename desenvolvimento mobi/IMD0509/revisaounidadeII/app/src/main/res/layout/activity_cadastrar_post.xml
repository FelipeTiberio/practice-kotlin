<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CadastrarPost">
    
    <TextView
        android:id="@+id/title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastra novo post"
        android:gravity="center"
        />
    
    <EditText
        android:id="@+id/titulo_txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Titulo"
        android:layout_weight="0.5"
        android:gravity="top|left"
        />

    <EditText
        android:id="@+id/descricao_txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Conteudo"
        android:layout_weight="4"
        android:inputType="textAutoComplete|textMultiLine|textCapCharacters|text"
        android:autofillHints=""
        android:gravity="top|left"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
        android:id="@+id/cancelar_btn"
        android:text="Cancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
            android:layout_weight="0.5"
        />

        <Button
            android:id="@+id/salvar_btn"
            android:text="SALVAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:layout_weight="0.5"
            />


    </LinearLayout>


</LinearLayout>