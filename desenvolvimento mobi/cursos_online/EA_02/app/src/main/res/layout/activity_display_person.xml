<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayPersonActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="29dp"
            tools:layout_editor_absoluteX="38dp">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_textview"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/last_name_textview"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/age_textview"/>
        <Button
                android:text="SAVE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/saveButton_button"/>
        <Button
                android:text="CANCEL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/cancel_button"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>